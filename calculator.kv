<CB@Button>:
font_size: 32
on_press: equation.text= equation.text + self.text
<CalcLayout>:
    id:calculator
    d_equation: equation
    font_size: 32
    rows: 6
    spacing:10
    padding: 10
    BoxLayout:
        spacing:10
        TextInput: 
            id: equation
            font_size=40
            multiline= False
    BoxLayout:
        spacing:10
        CB:
            text: "7"
        CB:
            text: "8"
        CB:
            text: "9"
        CB:
            text: "+"  
     BoxLayout:
        spacing:10
        CB:
            text: "4"
        CB:
            text: "5"
        CB:
            text: "6"
        CB:
            text: "-"     
     BoxLayout:
        spacing:10
        CB:
            text: "1"
        CB:
            text: "2"
        CB:
            text: "3"
        CB:
            text: "/"   
     BoxLayout:
        spacing:10
        Button:
            text: "AC"
            on_press: equation.text=""
        CB:
            text: "0"
        Button:
            text: "="
            on_press: calculator.calculate(equation.text)
        CB:
            text: "X"  
     BoxLayout:
        spacing:10
        Label:
            text:"['b']Calculator@kartikcode['b']"
            font_size: 36
