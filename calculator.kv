
<CustB@Button>: 
	font_size: 32
 
<CalcGridLayout>: 
	id: calculator 
	d_equation: equation
	rows: 6
	padding: 15
	spacing: 15

	BoxLayout: 
		TextInput: 
			id: equation 
			font_size: 32
			multiline: False

	BoxLayout: 
		spacing: 10
		CustB: 
			text: "7"
			on_press: equation.text += self.text 
		CustB: 
			text: "8"
			on_press: equation.text += self.text 
		CustB: 
			text: "9"
			on_press: equation.text += self.text 
		CustB: 
			text: "+"
			on_press: equation.text += self.text 

	BoxLayout: 
		spacing: 10
		CustB: 
			text: "4"
			on_press: equation.text += self.text 
		CustB: 
			text: "5"
			on_press: equation.text += self.text 
		CustB: 
			text: "6"
			on_press: equation.text += self.text 
		CustB: 
			text: "-"
			on_press: equation.text += self.text 

	BoxLayout: 
		spacing: 10
		CustB: 
			text: "1"
			on_press: equation.text += self.text 
		CustB: 
			text: "2"
			on_press: equation.text += self.text 
		CustB: 
			text: "3"
			on_press: equation.text += self.text 
		CustB: 
			text: "*"
			on_press: equation.text += self.text 


	BoxLayout: 
		spacing: 10
		CustB: 
			text: "AC"
			on_press: equation.text = "" 
		CustB: 
			text: "0"
			on_press: equation.text += self.text 
		CustB: 
			text: "="
			on_press: calculator.calculate(equation.text) 
		CustB: 
			text: "/"
			on_press: equation.text += self.text 
	BoxLayout: 
		CustB: 
			font_size: 28
			background_color: (1.0, 0.0, 0.0, 1.0)
			text: "Calculator@kartikcode"
					 
